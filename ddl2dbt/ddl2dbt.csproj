      <DependentUpon>DocFileTemplate.tt</DependentUpon>
    </Compile>
    <Compile Update="Templates\HubFileTemplate.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>HubFileTemplate.tt</DependentUpon>
