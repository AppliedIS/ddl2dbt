    </None>
    <None Update="Templates\StgTemplates\StgTemplate.tt">
      <Generator>TextTemplatingFilePreprocessor</Generator>
      <LastGenOutput>StgTemplate.cs</LastGenOutput>
    </None>
    <None Update="Templates\YamlFileTemplate.tt">
